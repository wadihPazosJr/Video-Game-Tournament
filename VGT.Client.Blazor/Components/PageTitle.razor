@inject IJSRuntime JSRuntime;

@code {
    private string _title = null;

    [Parameter]
    public string Title
    {
        get
        {
            return this._title;
        }

        set
        {
            this._title = value;
            setTitle();
        }
    }

    protected override void OnInitialized()
    {
        setTitle();
    }

    void setTitle()
    {
        JSRuntime.InvokeAsync<string>("setTitle", new string[] { this._title });
    }
}
